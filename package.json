{
  "name": "chatter",
  "module": "index.ts",
  "type": "module",
  "packageManager": "bun@1.1.36",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "css:watch": "bunx tailwindcss -i ./public/css/input.css -o ./public/css/tailwind.css --watch",
    "css:build": "bunx tailwindcss -i ./public/css/input.css -o ./public/css/tailwind.css --minify",
    "build": "bun build --minify --target=bun ./index.ts --outfile ./build.index.js && bun run css:build",
    "build:linux": "bun build --compile --minify --target=bun-linux-x64-baseline ./index.ts --outfile ./exec/linux-x64-baseline",
    "start": "SCHEMA_PATH=./src/db/schema.sql bun run ./build.index.js"
  },
  "devDependencies": {
    "@types/bun": "^1.1.13",
    "bun-types": "^1.1.36"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/bcryptjs": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^2.4.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15"
  }
}